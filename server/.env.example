# ============================================
# AI Earn Bot - Environment Variables
# ============================================
# Copy this file to .env and update with your values
# NEVER commit .env file to version control

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development
# Options: development, production, test

# Server Host (optional, defaults to 0.0.0.0)
# HOST=0.0.0.0

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Connection String
# Format: mongodb://[username:password@]host[:port][/database][?options]
MONGODB_URI=mongodb://localhost:27017/aiearnbot

# MongoDB Connection Options (optional)
# MONGODB_OPTIONS={"maxPoolSize":10,"serverSelectionTimeoutMS":5000}

# MongoDB Replica Set (if using)
# MONGODB_REPLICA_SET=rs0

# ============================================
# JWT AUTHENTICATION
# ============================================
# JWT Secret Key (MUST be changed in production!)
# Generate a strong random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration
# Format: 1d, 7d, 30d, 1h, 2h, etc.
JWT_EXPIRE=7d

# JWT Refresh Token Expiration (optional)
# JWT_REFRESH_EXPIRE=30d

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Telegram Bot Token from @BotFather
# Get it from: https://t.me/botfather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Telegram Bot Webhook URL (optional, for production)
# TELEGRAM_WEBHOOK_URL=https://yourapp.com/api/telegram/webhook

# Telegram Bot Polling (true/false, default: true)
# TELEGRAM_POLLING=true

# ============================================
# APPLICATION URL
# ============================================
# Frontend/App URL (for masked links in Telegram)
APP_URL=http://localhost:3000
# Production: APP_URL=https://yourapp.com

# API Base URL (optional)
# API_URL=http://localhost:3000/api

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed Origins (comma-separated)
# CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# CORS Credentials
# CORS_CREDENTIALS=true

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Rate Limiting (requests per window)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Helmet Security Headers
# HELMET_CONTENT_SECURITY_POLICY=true

# Trust Proxy (for reverse proxy/load balancer)
# TRUST_PROXY=1

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log Level: error, warn, info, debug
# LOG_LEVEL=info

# Log Format: combined, common, dev, short, tiny
# LOG_FORMAT=dev

# Enable File Logging (true/false)
# FILE_LOGGING=false

# Log File Path
# LOG_FILE_PATH=./logs/app.log

# ============================================
# CRON JOB CONFIGURATION
# ============================================
# Daily ROI Processing Interval (in milliseconds)
# Default: 24 hours (86400000 ms)
# CRON_DAILY_ROI_INTERVAL=86400000

# Enable Cron Jobs (true/false)
# CRON_ENABLED=true

# ============================================
# PAYMENT/WITHDRAWAL CONFIGURATION
# ============================================
# Minimum Withdrawal Amount
# MIN_WITHDRAWAL_AMOUNT=10

# Maximum Withdrawal Amount
# MAX_WITHDRAWAL_AMOUNT=10000

# Withdrawal Fee Percentage
# WITHDRAWAL_FEE_PERCENTAGE=2

# USDT Network (TRC20, ERC20, BEP20)
# USDT_NETWORK=TRC20

# USDT Contract Address (if needed)
# USDT_CONTRACT_ADDRESS=

# Payment Gateway API Key (if using)
# PAYMENT_API_KEY=

# Payment Gateway Secret (if using)
# PAYMENT_SECRET=

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# SMTP Host
# SMTP_HOST=smtp.gmail.com

# SMTP Port
# SMTP_PORT=587

# SMTP User
# SMTP_USER=your-email@gmail.com

# SMTP Password
# SMTP_PASSWORD=your-app-password

# Email From Address
# EMAIL_FROM=noreply@aiearnbot.com

# ============================================
# REDIS CONFIGURATION (Optional, for caching)
# ============================================
# Redis Host
# REDIS_HOST=localhost

# Redis Port
# REDIS_PORT=6379

# Redis Password (if required)
# REDIS_PASSWORD=

# Redis Database Number
# REDIS_DB=0

# ============================================
# FILE UPLOAD CONFIGURATION (Optional)
# ============================================
# Maximum File Size (in bytes)
# MAX_FILE_SIZE=5242880

# Allowed File Types
# ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Upload Directory
# UPLOAD_DIR=./uploads

# ============================================
# ADMIN CONFIGURATION
# ============================================
# Default Admin Email (auto-created on first start)
# ADMIN_EMAIL=admin@aiearnbot.com

# Default Admin Password (change after first login!)
# ADMIN_PASSWORD=Admin123!

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Enable Telegram Bot
# ENABLE_TELEGRAM_BOT=true

# Enable Daily ROI Cron
# ENABLE_DAILY_ROI=true

# Enable Auto-Invest Welcome Bonus
# ENABLE_AUTO_INVEST_BONUS=true

# Enable Email Notifications
# ENABLE_EMAIL_NOTIFICATIONS=false

# Enable SMS Notifications
# ENABLE_SMS_NOTIFICATIONS=false

# ============================================
# MONITORING & ANALYTICS (Optional)
# ============================================
# Sentry DSN (for error tracking)
# SENTRY_DSN=

# Google Analytics ID
# GA_TRACKING_ID=

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Enable Debug Mode
# DEBUG=false

# Enable Verbose Logging
# VERBOSE_LOGGING=false

# Skip Database Validation (development only)
# SKIP_DB_VALIDATION=false
